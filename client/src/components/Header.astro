<header class="bg-blue-500 dark:bg-blue-700 text-white p-4 shadow-md transition-colors duration-300">
  <div class="container mx-auto flex justify-between items-center pl-4 pr-4">
    <div class="flex items-center">
      <div class="relative group">
        <button id="menu-toggle" class="focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-blue-500 rounded mr-4" aria-label="Toggle menu" aria-expanded="false" aria-controls="menu">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
        <nav id="menu" class="hidden absolute left-0 mt-2 w-48 bg-white dark:bg-slate-800 text-slate-800 dark:text-white rounded shadow-lg z-10 transition-colors duration-300" aria-label="Main navigation">
          <ul class="py-1">
            <li><a href="/" class="block px-4 py-2 hover:bg-slate-100 dark:hover:bg-slate-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-inset">Home</a></li>
            <li><a href="/about" class="block px-4 py-2 hover:bg-slate-100 dark:hover:bg-slate-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-inset">About</a></li>
          </ul>
        </nav>
      </div>
      <div class="text-xl font-bold"><a href="/" class="hover:underline focus:outline-none focus:ring-2 focus:ring-white focus:rounded">Tailspin Toys</a></div>
    </div>
  </div>
</header>

<script>
  // Toggle menu visibility when hamburger is clicked
  const menuToggle = document.getElementById('menu-toggle');
  const menu = document.getElementById('menu');
  
  if (menuToggle && menu) {
    // Handle click events
    menuToggle.addEventListener('click', () => {
      toggleMenu();
    });
    
    // Handle keyboard events (Enter and Space)
    menuToggle.addEventListener('keydown', (event) => {
      if (event.key === 'Enter' || event.key === ' ') {
        event.preventDefault();
        toggleMenu();
      }
    });
    
    // Handle Escape key to close menu
    document.addEventListener('keydown', (event) => {
      if (event.key === 'Escape' && !menu.classList.contains('hidden')) {
        closeMenu();
        menuToggle.focus();
      }
    });
    
    function toggleMenu() {
      menu.classList.toggle('hidden');
      const isExpanded = !menu.classList.contains('hidden');
      menuToggle.setAttribute('aria-expanded', String(isExpanded));
      
      // Focus first menu item when opening
      if (isExpanded) {
        const firstLink = menu.querySelector('a');
        if (firstLink) {
          setTimeout(() => firstLink.focus(), 100);
        }
      }
    }
    
    function closeMenu() {
      menu.classList.add('hidden');
      menuToggle.setAttribute('aria-expanded', 'false');
    }
    
    // Close menu when clicking outside
    document.addEventListener('click', (event) => {
      const isClickInside = menuToggle.contains(event.target as Node) || menu.contains(event.target as Node);
      if (!isClickInside && !menu.classList.contains('hidden')) {
        closeMenu();
      }
    });
  }
</script>